


<div class="row">
  <center>
    <!-- Left side (ready to eat) -->
    <div class="col-md-6">
      <h4 class="red_font">Ready to Workout!</h4>
      <div id="ready_to_eat">

        <!-- Dynamically Insert Ready Burgers Here -->
        {{#each workout}}
          {{#unless KilledIt}}
          <form action="workout/eat/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{id}}. {{workout}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-success devour-button" type="submit">Kill It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>

    <!-- Right side (already eaten) -->
    <div class="col-md-6">
      <h4 class="red_font">Demolished It!</h4>
      <div id="already_eaten">

        <!-- Dynamically Insert Eaten Burgers Here -->
        {{#each workout}}
          {{#if this.KilledIt}}
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.workout}}</li>
              <span class="input-group-btn">
                <button class="btn btn-info whine-button" type="button">Demolished It!</button>
              </span>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>